.top {
  height: 350rpx;
  width: 100%;
}

.middle {
  padding: 10%;
  display: flex;
  flex-flow: row wrap;
}

.icon {
  width: 33%;
  height: 180rpx;
  border-right: solid 1px #bcbcbc;
  text-align: center;
}

.icon image {
  padding: 0 20%;
  width: 60%;
  height: 60%;
}

.icon text {
  font-size: 14px;
  width: 100%;
  color: #333;
}

.line {
  margin: 20px 0;
}

.no-line {
  border: none;
}
