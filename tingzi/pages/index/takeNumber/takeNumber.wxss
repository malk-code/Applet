/* pages/index/children/takeNumber/takeNumber.wxss */

.navigationBar {
  height: 44px;
  display: flex;
  justify-content: space-between;
  flex: row wrap;
  background-color: #fff;
}

.navigationBar image {
  padding: 6px 10px;
  height: 30px;
  width: 30px;
}

.navigationBar text {
  height: 44px;
  line-height: 44px;
  font-size: 16px;
}

.remark-cell {
  display: flex;
  justify-content: space-between;
  font-size: 16px;
  font-weight: 200;
  text-align: center;
  padding: 15px 5%;
  border-bottom: solid 1px #d9d9d9;
  color: #333;
  background-color: #fff;
}

.cell-align-left {
  padding-left: 2%;
}

.cell-need {
  color: #fd0f0f;
  font-size: 18px;
  font-weight: 200;
}

.remark-cell image {
  width: 15px;
  height: 15px;
  margin-top: 3px;
}

.cell-picker {
  display: flex;
}

.picker {
  margin-right: 5px;
}

.bottom {
  padding: 15px 5%;

  /* padding-bottom: 33%; */
}

.main {
  background-color: #ededed;
}

.bottom text:not(.cell-need) {
  color: #aeaeae;
  font-size: 14px;
  font-weight: 200;
}

.bottom button {
  background-color: #b22222;
  color: #f5f5f5;
  margin-top: 30px;
  width: 70%;
  height: 50px;
}
